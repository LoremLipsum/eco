mixin about-service(data)
    +el({
        class: 'about-service',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        .about-service__wrap
            .about-service__branch.about-service__branch--large.js-parallax(style="background-image: url(assets/images/branch-without-cone.png)")
            .about-service__branch.about-service__branch--small.js-parallax(style="background-image: url(assets/images/branch-small-w-shadow.png)")
            .js-about-servise-slider.swiper-container
                .about-service__service.swiper-wrapper
                    each item in service
                        .about-service__item.swiper-slide
                            +about-card({
                                image: 'about-service/' + item.image,
                                heading: item.heading,
                                text: item.text,
                            })
                .about-service__bullet.swiper-pagination.js-about-service-bullet
