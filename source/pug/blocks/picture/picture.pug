mixin picture-full(data)
    - path = data.path ? data.path + '/' : ''
    +el({
        tag: 'picture',
        class: 'picture',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })
        source(media="(min-width: 920px)" srcset='./assets/images/' + path + data.large + '@1x.webp 1x, ./assets/images/' + path + data.large + '@2x.webp 2x' type='image/webp')
        source(media="(min-width: 920px)" srcset='./assets/images/' + path + data.large + '@1x.' + data.exp + ' 1x, ./assets/images/' + path + data.large + '@2x.' + data.exp + ' 2x')
        source(media="(min-width: 420px)" srcset='./assets/images/' + path + data.medium + '@1x.webp 1x, ./assets/images/' + path + data.medium + '@2x.webp 2x' type='image/webp')
        source(media="(min-width: 420px)" srcset='./assets/images/' + path + data.medium + '@1x.' + data.exp + ' 1x, ./assets/images/' + path + data.medium + '@2x.' + data.exp + ' 2x')
        source(srcset='./assets/images/' + data.small + '@1x.webp 1x, ./assets/images/' + data.small + '@2x.webp 2x' type='image/webp')
        img.picture__image(src='./assets/images/' + path + data.small + '@1x.' + data.exp srcset='./assets/images/' + path + data.small + '@2x.' + data.exp + ' 2x' alt=data.alt ? data.alt : '' loading='lazy')

