mixin about-card(data)
    +el({
        class: 'about-card',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        +el({
            class: 'about-card__image-wrap',
        })
            +picture({
                image: data.image,
                exp: 'jpg',
                class: 'about-card__image',
                alt: data.alt,
            })
        +el({
            mix: 'about-card__content',
            before: {
                tag: 'strong',
                class: 'about-card__title',
                text: data.heading
            },
            after: {
                tag: 'p',
                class: 'about-card__text',
                text: data.text
            }
        })
