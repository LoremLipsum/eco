mixin footer(data)
    -
        var nav1 = [
            'Описание Экопарка',
            'Уникальность места',
            'Особенности строительства',
            'Что рядом?',
            'Команда',
            'Документация',
        ];
    -
        var nav2 = [
            'Таунхаусы',
            'Виллы',
            'Коттеджи',
        ];
    -
        var nav3 = [
            'Условия приобретения',
            'Услуги',
            'Блог',
            'Контакты',
        ];

    +el({
        tag: 'footer',
        class: 'footer',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .footer__top
            .footer__wrap
                .footer__about
                    .footer__logo-wrap
                        +logo({
                            mix: 'footer__logo',
                            secondary: true,
                            mod: 'secondary'
                        })
                    +el({
                        tag: 'p',
                        class: 'footer__address',
                        text: 'Республика Крым, г. Ялта, <br>ул. Большевистская, 100'
                    })
                    +el({
                        tag: 'a',
                        class: 'footer__phone',
                        href: 'tel:88005053848',
                        text: '8 800 <span>505 38 48</span>',
                    })
                    +social({
                        items: social,
                        mod: 'invert',
                        mix: 'footer__social',
                    })
                .footer__nav(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                    .footer__nav-item.footer__nav-item--dropdown.footer__nav-item--large.js-footer-dropdown
                        h4.footer__title.js-footer-dropdown-button Об Экопарке
                            +arrow({
                                mod: ['down', 'white'],
                                mix: 'footer__title-arrow'
                            })
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in nav1
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
                    .footer__nav-item.footer__nav-item--dropdown.footer__nav-item--small.js-footer-dropdown
                        h4.footer__title.js-footer-dropdown-button  Наши объекты
                            +arrow({
                                mod: ['down', 'white'],
                                mix: 'footer__title-arrow'
                            })
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in nav2
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
                    +el({
                        class: 'footer__title-group',
                    })
                        each item in nav3
                            .footer__nav-item
                                +el({
                                    tag: 'h4',
                                    class: 'footer__title',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
        .footer__bottom
            .footer__wrap
                .footer__copyright
                    +el({
                        tag: 'p',
                        class: 'footer__text',
                        text: 'г. Симферополь &copy;&nbsp;Copyright 2019&nbsp;г.'
                    })
                .footer__madein
                    | Сделанo в
                    +el({
                        tag: 'a',
                        title: 'Sheer',
                        href: 'https://sheer82.ru/'
                    })
                        span.hidden 'Sheer'
                        +el({
                            tag: 'svg',
                            icon: 'sheer',
                        })
